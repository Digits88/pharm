<%- method = @user.new_record? ? :post : :put -%>
<% form_for(:user, @user, :url => admin_user_path, :html => {:method => method }) do |f| -%>
  <div id="settings">
    <table class="form">
      <tr>
        <td class="label"><%= f.label :title, "Blog Title" -%></td>
        <td class="field"><%= f.text_field :title -%></td>
      </tr>
      <tr>
        <td class="label"><%= f.label :name, "Author Name" -%></td>
        <td class="field"><%= f.text_field :name -%></td>
      </tr>
      <tr>
        <td class="label"><%= f.label :layout -%></td>
        <td class="field"><%= f.select :layout, ['white', 'black'] -%></td>
      </tr>
      <tr>
        <td class="label"><%= f.label :photo_width, "Photo Width" -%></td>
        <td class="field"><%= f.select :photo_width, options_for_photo_width_select -%> pixels <span class="helper">(we recommend 800px)</td>
      </tr>
      <tr>
        <td class="label top"><%= f.label :about, "About / Info" -%></td>
        <td class="field"><%= f.text_area :about -%></td>
      </tr>
      <tr>
        <td class="label top"><%= f.label :footnotes -%></td>
        <td class="field"><%= f.text_area :footnotes -%></td>
      </tr>
      <tr>
        <td>&nbsp;</td>
        <td class="buttons">
          <%= f.submit "Save Settings" %>
          <%= link_to("Cancel", admin_path) %>
        </td>
      </tr>
    </table>
  </div>
<% end -%>
