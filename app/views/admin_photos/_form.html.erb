<div id="upload">
  <%- form_for(@photo ||= Photo.new, :html => { :multipart => true }) do |f| -%>
    <% unless @photo.new_record? %>
      <div class="photo_full"><%= image_tag @photo.asset.url unless @photo.new_record? %></div>
    <% end %>
    <div class="upload_file">
      <label><%= "#{@photo.new_record? ? 'Upload' : 'Replace'} photo" %></label>
      <div class="helper">Support JPEG, max size 10mb</div>
      <%= f.file_field :asset, :accept => "image/gif,image/jpeg,image/jpg,image/png" %>
    </div>
    <div class="post_form">
      <%= f.label :title, "Title (optional)" %>
      <%= f.text_field :title %>

      <%= f.label :body, "Body (optional)" %>
      <%= f.text_area :body %>
    </div>
    <div class="buttons"><%= f.submit "#{@photo.new_record? ? 'Create' : 'Update'} Post" %></div>
  <%- end -%>
</div>
